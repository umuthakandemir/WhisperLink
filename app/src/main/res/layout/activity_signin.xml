<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity"
    android:background="@color/openDark">

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:elevation="25dp"
        android:layout_height="100dp"
        android:id="@+id/userPhotoCardView"
        app:cardCornerRadius="500dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp">
        <ImageView
            android:onClick="selectProfilePhoto"
            android:id="@+id/userPhoto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/white"
            android:scaleType="fitXY"
            android:src="@drawable/user"

            />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:elevation="25dp"
        android:id="@+id/siginLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:background="@drawable/loginlinear"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userPhotoCardView">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:text="Name Surname"
            android:textColor="@color/fontColor"
            android:textColorHint="@color/fontColor"
            android:textSize="17sp" />

        <EditText

            android:id="@+id/nameSurname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/edittext_bacgroun_shape"
            android:inputType="text"
            android:padding="5dp"
            android:textColor="@color/fontColor"
            android:textColorHint="@color/fontColor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:text="Email Adress"
            android:textColor="@color/fontColor"
            android:textColorHint="@color/fontColor"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/emailSıgnIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/edittext_bacgroun_shape"
            android:inputType="textEmailAddress"
            android:padding="5dp"
            android:textColor="@color/fontColor"
            android:textColorHint="@color/fontColor" />

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_margin="5dp"
            android:background="@color/openDark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Password"
            android:textColor="@color/fontColor"
            android:textColorHint="@color/fontColor"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/passwordSıgnIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/edittext_bacgroun_shape"

            android:inputType="textPassword"
            android:padding="5dp"
            android:textColor="@color/fontColor"
            android:textColorHint="@color/fontColor" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_margin="5dp"
            android:background="@color/openDark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Password Repeat"
            android:textColor="@color/fontColor"
            android:textColorHint="@color/fontColor"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/password2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/edittext_bacgroun_shape"

            android:inputType="textPassword"
            android:padding="5dp"
            android:textColor="@color/fontColor"
            android:textColorHint="@color/fontColor" />

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_margin="5dp"
            android:background="@color/openDark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Phone Number"
            android:textColor="@color/fontColor"
            android:textColorHint="@color/fontColor"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_bacgroun_shape"
            android:inputType="phone"
            android:hint="(5xx) xxx xx xx"
            android:padding="5dp"
            android:textColor="@color/fontColor"
            android:textColorHint="@color/fontColor" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FROM"
        android:textSize="17sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:id="@+id/fromtextSignIn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="@+id/signINCardView"
        app:layout_constraintBottom_toBottomOf="@+id/signINCardView"/>
    <ImageView
        android:id="@+id/fromlogo"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:backgroundTint="@color/black"
        android:background="@drawable/logopixelcreaft"
        app:layout_constraintStart_toStartOf="@+id/fromtextSignIn"
        app:layout_constraintEnd_toEndOf="@+id/fromtextSignIn"
        app:layout_constraintTop_toBottomOf="@+id/fromtextSignIn"
        android:layout_margin="5dp"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/signINCardView"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginBottom="30dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@color/dark"
        app:layout_constraintEnd_toEndOf="@+id/siginLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="1.0"
        android:elevation="25dp">
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:onClick="SignInClick"
            android:backgroundTint="@color/fontColor"
            android:background="@drawable/login"
            android:id="@+id/SignInButton"/>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>