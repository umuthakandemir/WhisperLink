<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark">
    <androidx.cardview.widget.CardView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="50dp"
        android:layout_margin="8dp"
        android:id="@+id/messageRecyclerviewCardView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/user"
            android:id="@+id/messageRecyclerviewUserImage"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/messageRecyclerviewUserName"
        android:text="Example User"
        android:textColor="#ffff52"
        android:textSize="18sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintEnd_toStartOf="@+id/messageRecyclerviewDate"
        app:layout_constraintStart_toEndOf="@+id/messageRecyclerviewCardView"
        app:layout_constraintTop_toTopOf="@+id/messageRecyclerviewCardView"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/messageRecyclerviewLastMessage"
        android:text="Last Message"
        android:textColor="@color/fontColor"
        android:textSize="18sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toEndOf="@+id/messageRecyclerviewMessageRead"
        app:layout_constraintTop_toBottomOf="@+id/messageRecyclerviewUserName"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:id="@+id/messageRecyclerviewMessageRead"
        android:background="@drawable/read"
        android:backgroundTint="#ffff52"
        android:layout_marginTop="2dp"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@+id/messageRecyclerviewCardView"
        app:layout_constraintTop_toBottomOf="@+id/messageRecyclerviewUserName"
        app:layout_constraintBottom_toBottomOf="@+id/messageRecyclerviewCardView"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21.09.2024"
        android:textColor="#ffff52"
        android:id="@+id/messageRecyclerviewDate"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintTop_toTopOf="@+id/messageRecyclerviewUserName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>